let
  function read_unsigned() : int =
    let
      var c := getchar()
      var n := 0
      var valid := 1
    in
      while (c <> "\n") and (c <> "") do (
        if ord(c) >= ord("0") and ord(c) <= ord("9") then
          n := n * 10 + (ord(c) - ord("0"));
        else
          valid := 0;
        c := getchar()
      );
      if valid = 1 then n else -1
    end;

  var a : int := read_unsigned()
in
  print_int(a * 2);
  print("\n")
end

